<body>
	<div align="center">
		<h1>User Registration</h1>
		<form action="#" th:action="@{/register}" method="post" th:object="${user}">
		<label>Full name:</label>
        <input type="text" th:field="*{name}" />
        <span th:if="${#fields.hasErrors('name')}" th:errors="*{name}">Full name error</span><br/>
 
        <label>E-mail:</label>
        <input type="text" th:field="*{email}" />
        <span th:if="${#fields.hasErrors('email')}" th:errors="*{email}">Full name error</span><br/>
 
        <label>Password:</label>
        <input type="password" th:field="*{password}" />
        <span th:if="${#fields.hasErrors('password')}" th:errors="*{password}">Full name error</span><br/>
 
        <label>Birthday (yyyy-mm-dd):</label>
        <input type="date" th:field="*{birthday}" />
        <span th:if="${#fields.hasErrors('birthday')}" th:errors="*{birthday}">Full name error</span><br/>
 
        <label>Gender:</label>
        <input type="radio" th:field="*{gender}" value="Male" />Male
        <input type="radio" th:field="*{gender}" value="Female" />Female
        <span th:if="${#fields.hasErrors('gender')}" th:errors="*{gender}">Full name error</span><br/>
 
        <label>Profession:</label>
        <select th:field="*{profession}">
            <option th:each="p : ${listProfession}" th:value="${p}" th:text="${p}" />
        </select>
        <span th:if="${#fields.hasErrors('profession')}" th:errors="*{profession}">Full name error</span>
        <br/>
 
        <label>Married?</label>
        <input type="checkbox" th:field="*{married}" />
        <span th:if="${#fields.hasErrors('married')}" th:errors="*{married}">Full name error</span><br/>
        
 
        <label>Note:</label>
        <textarea rows="5" cols="25" th:field="*{note}"></textarea>
        <span th:if="${#fields.hasErrors('note')}" th:errors="*{note}">Full name error</span>
        <br/>
 
        <button type="submit">Register</button>  
		</form>
	</div>
